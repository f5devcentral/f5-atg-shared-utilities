{
    "name": "atg-shared-utilities",
    "version": "0.1.0",
    "scripts": {
        "lint": "eslint .",
        "test": "mocha test/unit/ --recursive",
        "coverage": "nyc npm test"
    },
    "devDependencies": {
        "@f5devcentral/eslint-config-f5-atg": "latest",
        "coverage": "^0.4.1",
        "nyc": "^15.1.0",
        "sinon": "^9.0.3"
    },
    "eslintConfig": {
        "extends": "@f5devcentral/eslint-config-f5-atg",
        "rules": {
            "func-names": "off"
        }
    },
    "nyc": {
        "reporter": [
            "html",
            "text",
            "json-summary"
        ],
        "exclude": [
            "gulpfile.js",
            "coverage/**",
            "test/**",
            "**/node_modules/**",
            "**/dist/**"
        ]
    },
    "dependencies": {
        "@elastic/elasticsearch": "^7.9.0",
        "mocha": "^7.2.0"
    }
}
